﻿@{
ViewData["Title"] = "Panel de Control";
}

<div class="container mt-4">

    <h2 class="mb-3">Bienvenido @ViewBag.Usuario</h2>

    <div class="d-grid gap-2">
        <a class="btn btn-primary" asp-controller="Home" asp-action="Create">Crear Registro</a>
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Consultas">Consultas</a>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Cancelar">Cancelaciones</a>


    </div>

    <hr />

    
    <form asp-action="Logout" method="post" class="mt-3">
        <button class="btn btn-danger">Cerrar Sesión</button>
    </form>

</div>