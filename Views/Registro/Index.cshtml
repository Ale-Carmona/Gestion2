@model IEnumerable<Gestion2.Models.MemoModel>

<div class="container mt-4">
    <h2 class="mb-3">Registros de Memorándum</h2>

    <!-- 🔍 BUSCADOR POR ASUNTO -->
    <form method="get" asp-action="Index" class="mb-3 d-flex">
        <input type="text" name="buscar" value="@ViewBag.Buscar"
               class="form-control me-2"
               placeholder="Buscar por asunto...">

        <button type="submit" class="btn btn-primary">Buscar</button>

        <a asp-action="Index" class="btn btn-secondary ms-2">Limpiar</a>
    </form>

    <!-- 📤 EXPORTAR A EXCEL -->
    <a asp-action="ExportToExcel" class="btn btn-success mb-3">Exportar a Excel</a>

    <table class="table table-striped mt-3">
        <thead class="table-dark">
            <tr>
                <th>Folio</th>
                <th>Año</th>
                <th>De</th>
                <th>Para</th>
                <th>Fecha</th>
                <th>Asunto</th>
                <th>Estatus</th>
                <th>Creado por</th>
                <th>Acciones</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Folio</td>
                    <td>@item.Año</td>
                    <td>@item.De</td>
                    <td>@item.Para</td>
                    <td>@item.FechaRegistro.ToString("dd/MM/yyyy")</td>
                    <td>@item.Asunto</td>
                    <td>@item.Estatus</td>
                    <td>@item.UsuarioRegistro</td>

                    <td>
                        <a asp-controller="Registro" asp-action="Preview" asp-route-id="@item.Id"
                           class="btn btn-sm btn-info">Ver</a>

                        @if (item.Estatus == "Activo")
                        {
                            <a asp-controller="Registro" asp-action="Cancel" asp-route-id="@item.Id"
                               class="btn btn-sm btn-danger">Cancelar</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
